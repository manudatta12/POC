{% trans_default_domain 'FOSUserBundle' %}
<style>
.countryCode{ width:40px;margin-right:5px; }
.country{ width:177px; }
</style>
<form action="{{ path('user_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">   
 
<h2 class="h2Heading"><span>R</span>User Registration</h2>
<div class="row">

        <div class="rowFull">
          <div class="half">
            <div class="inL">Full Name<span class="star">*</span></div>
            <div class="inR">
{{ form_widget(form.fullname)}}
{{ form_errors(form.fullname) }}
            </div>
          </div>
          <div class="half">
            <div class="inL">Email<span class="star">*</span></div>
            <div class="inR">
{{ form_widget(form.email)}}
{{ form_errors(form.email) }}
            </div>
          </div>
        </div>
        <!-- rowFull -->


 <div class="rowFull">

          <div class="half">
            <div class="inL">Mobile No<span class="star">*</span></div>
            <div class="inR mob_fields"> 
  {{ form_widget(form.countryCode,{ 'attr': {'class': 'countryCode',value : 91} })}}
 {{ form_errors(form.countryCode) }}
 {{ form_widget(form.mobileNo)}}
 {{ form_errors(form.mobileNo) }}
            </div>
          </div>

          <div class="half">
            <div class="inL">Country<span class="star">*</span></div>
            <div class="inR">

 {{ form_widget(form.country)}}
 {{ form_errors(form.country) }}
            </div>
          </div>
        </div>
        <!-- rowFull -->

 <div class="rowFull">
         <div class="half">
            <div class="inL">Password<span class="star">*</span></div>
            <div class="inR">
{{ form_widget(form.plainPassword.first) }}
{{ form_errors(form.plainPassword.first) }}
            </div>
          </div>
          <div class="half">
            <div class="inL">Confirm Password<span class="star">*</span></div>
            <div class="inR">
      {{ form_widget(form.plainPassword.second) }}
	    {{ form_errors(form.plainPassword.second) }}
            </div>
          </div>
        </div>
        <!-- rowFull -->

 <div class="rowFull">
{{ form_rest(form) }}
<input type="submit" class="submitBut" name="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />&nbsp;&nbsp;&nbsp;
        </div>
        <!-- rowFull -->


 
   </div>

</form>


